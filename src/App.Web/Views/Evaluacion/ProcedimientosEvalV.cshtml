@model IEnumerable<App.ViewModels.SELReconsideraciones.getAtencionesAPOxID>

<table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tblProcedimientos" style="font-size: 10px !important">
    <thead class="text-center" style="background-color: #0272A3; border-width: 2px; color: white; vertical-align: middle; ">
        <tr>
            <th style="text-align:center">Nº</th>
            <th style="text-align:center">CODIGO</th>
            <th style="text-align:center">DESCRIPCIÓN</th>
            <th style="text-align:center">PO(S/.)</th>
            <th style="text-align:center">IND</th>
            <th style="text-align:center">EJE</th>
            <th style="text-align:center">DX</th>
            <th style="text-align:center">OBSERVACIÓN</th>
            <th style="text-align:center">PREPOS(S/.)</th>
            @if (ViewBag.RecEstado == 2 || ViewBag.RecEstado == 5)
            {
                <th style="text-align:center"><span>ACCIÓN</span></th>
            }

        </tr>
    </thead>
    <tbody>
        @{

            if (Model.Count() > 0)
            {
                var i = 1;
                foreach (var item in Model)
                {
                <tr id="Procedimientos_cant">
                    <td style="text-align: center"> @i</td>
                    <td style="text-align: center">@item.AAPO_CODAPO</td>
                    <td style="text-align: justify">@item.APO_NOMBRE!.ToString().ToUpper()</td>
                    <td style="text-align: center"><b>@( string.Format("{0:C2}", item.APO_COSTO))</b></td>
                    <td style="text-align: center">@item.AAPO_ICANTPROCED</td>
                    <td style="text-align: center">@item.AAPO_ICANTEJECUTADA</td>
                    <td style="text-align: justify"><span class="fw-bold" style="color:red">@item.C10_CODDIA</span>  - @item.C10_NOMBRE</td>
                    <td style="text-align: justify">@item.ROBS_DETALLE</td>
                    <td style="text-align: justify"></td>
                    @if (ViewBag.RecEstado == 2 || ViewBag.RecEstado == 5)
                    {
                        <td style="text-align: center">
                            <a onclick="GetAtencionAPOPorId(2,@item.AAPO_IDNUMREG);" href="javascript:void(0);"><i style="font-size: 20px; color: #c64821;" title="Editar Procedimiento" class="fas fa-edit" aria-hidden="true"></i></a>
                        </td>
                    }

                </tr>
                    i = i + 1;
                }
            }
            else
            {
                <tr>
                    <td colspan="11" style="text-align: center"><h5 class="text-danger">Aún no hay registros a mostrar</h5></td>
                </tr>
            }

        }
    </tbody>
</table>
<script></script>

<div class="modal fade" id="mdl_AccionMedicamentosFUAV" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="mdl_AccionMedicamentosFUAVlabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background:#264A74">
                <h5 class="modal-title text-white" id="mdl_AccionMedicamentosFUAVlabel">@ViewBag.Titulo_Modal</h5>

                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                     aria-label="Close">
                    <span class="svg-icon svg-icon-2x">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black"></rect>
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black"></rect>
                        </svg>
                    </span>
                </div>
            </div>

            <div class="modal-body">
                <input type="hidden" id="txtIdMed" value="@ViewBag.IdMed">
                <input type="hidden" id="txtPreMedUni">
                <div class="accordion" id="accordionPanelsStayOpenExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                            <button class="accordion-button" style="background-color:#282e32 !important;color:lightgray !important" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                1. Datos Generales del Medicamento
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                            <div class="accordion-body">

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-4">
                                            <div class="form-label fw-bolder">
                                                Código
                                            </div>
                                            <div class="input-group">
                                                <input type="text" class="form-control form-control-sm" id="txtCodMedicamento" disabled />
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Descripción</label>
                                            <textarea type="text" class="form-control form-control-sm form-control-solid" rows="1" id="txtDesMedicamento" disabled></textarea>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Prescrita</label>
                                            <input type="text" class="form-control form-control-sm" id="txtPrescrito" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Entregada</label>
                                            <input type="text" class="form-control form-control-sm" id="txtEntregado" disabled />
                                        </div>
                                    </div>


                                    <div class="col-md-4">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Precio (S/.)</label>
                                            <input type="text" class="form-control form-control-solid form-control-sm" id="txtPrecio" disabled />
                                        </div>
                                    </div>
                                </div>
                            
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                            <button class="accordion-button" style="background-color:#282e32 !important;color:lightgray !important" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                                            2. Datos para la Evaluación:
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                            <div class="accordion-body">

                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Cant. Evaluación</label>
                                            <input type="number" min="0" onkeyup="Calcular_Precio_Med()" class="form-control form-control-sm fw-bolder" id="txtCantEval" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Precio de Evaluación (S/.)</label>
                                            <input type="text" style="color:darkred" class="form-control form-control-solid form-control-sm fw-bolder" id="txtPrecioEval" disabled />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-4">
                                            <label class="form-label fw-bolder">Motivo Cambio Cantidad</label>
                                            <textarea type="text" rows="3" class="form-control form-control-sm" id="txtMotivoCambioCant"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                            <button class="accordion-button" style="background-color:#282e32 !important;color:lightgray !important" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                                3. Detalle de la Reconsideración Parcial:
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingThree">
                            <div class="accordion-body">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-4">
                                            <label class="form-label text-wrap fw-bolder">Observado por:</label>
                                            <textarea type="text" rows="3" class="form-control form-control-sm" id="txtObsParcialEval" disabled></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="modal-footer">
                    @if (ViewBag.Tipo == "2")
                    {
                        <button type="button" onclick="Conf_Actualizar(event);" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Actualizar
                        </button>
                    }

                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#txtCodMedicamento').keypress(function (event) {
        var keycode = event.keyCode || event.which;
        if (keycode == '13') {
            GetMedicamentoxMED_CODMED();
        }
    });

    function Calcular_Precio_Med(){
        let costo = 0;
        let cantidad = 0;
        let calculo = 0;
        let entregado=0;
        entregado = $("#txtEntregado").val();
        costo=$('#txtPreMedUni').val(); 
        cantidad = $('#txtCantEval').val();
        if (parseInt(cantidad, 10) <= parseInt(entregado, 10)) {
            calculo = costo * cantidad;
            $('#txtPrecioEval').val(calculo);
            $('#txtCantEval').focus();
        }else{
            $('#txtPrecioEval').val('');
            $('#txtCantEval').val('');
            NotificacionToastr('error', `La cantidad ingresada es superior a la entregada (${cantidad} > ${entregado} ).`, 'Verifique!!!');
            $('#txtCantEval').focus();
        }
        
    }


    async function GetMedicamentoxMED_CODMED(){
        try {
            const array_data = {};
            array_data.MED_CODMED = $('#txtCodMedicamento').val();
            if(array_data.MED_CODMED == ""){
                NotificacionToastr('error', `Ingrese el codigo de Medicamento.`, 'Campo requerido');
                $('#txtCodMedicamento').focus();
                return false;
            }
            CargarWaitMe();
            const { isSuccess, result } = await getData('@Url.Content("~/FUA/GetMedicamentoxMED_CODMED")', array_data);
            console.log(isSuccess, result);
            if(isSuccess){
                $('#txtDesMedicamento').val(result.meD_NOMBRE);                
            }
            else{
                NotificacionToastr('error', `Algo salio mal intente mas tarde.`, 'Error...');
                $('#txtDesMedicamento').val('');
            }
            TerminarWaitMe();
        } catch (err) {
            console.log(err);
            TerminarWaitMe();
        }
    }

    async function getData(ajaxurl, data_array) {
        return $.get(ajaxurl, data_array );
    };

 
</script>
<script>
     function cargarModalPresupCorredVial(id,cui) {
        $.get("@Url.Content("~/CorredorVial/PresupuestoCorredorVialV")", { id: id, cui:cui})
        .done(function (response) {
            $('#modalPresupCorredorVialV').html(response);
            $('#mdl_PresupCorredorVialV').modal("show");
        });
    }
    function CargarModalMapaCorredorVial(id, cui) {
        console.log(id, cui);
        $.get("@Url.Content("~/CorredorVial/GetMapaCorredorVialV")", { id: id, cui: cui})
        .done(function (response) {
            $('#modalPresupCorredorVialV').html(response);
            $('#mdl_MapaCorredorVialV').modal("show");
        });
    }
    function AsignarTramo(id) {
        $(".content-custom").load("@Url.Content("~/TramoCV/Index")", { id: id})
    }
    function CargarComponteCV(id) {
        $(".content-custom").load("@Url.Content("~/ComponenteCV/Index")", { id: id})
    }
</script>
@model IEnumerable<App.ViewModels.SELReconsideraciones.GetSolicitudAmpliacion>

<table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tblSolicitudAmpliacion" style="font-size: 10px !important">
    <thead class="text-center" style="background-color: #0272A3; border-width: 2px; color: white; vertical-align: middle; ">
        <tr>
            <th style="text-align:center">Nº</th>
            <th style="text-align:center">PERIODO</th>
            <th style="text-align:center">UDR</th> 
            <th style="text-align:center">U.EJECUTORA</th> 
            <th style="text-align:center">ESTABLECIMIENTO</th>
            <th style="text-align:center">FEC.SOLICITUD</th>
            <th style="text-align:center">ESTADO</th>
            <th style="text-align:center">DIAS.AMP</th>
            <th style="text-align:center">FEC.FINPLAZO</th>
            <th style="text-align:center">SOLICITANTE</th>
            <th style="text-align:center"><span>ACCIÓN</span></th>


        </tr>
    </thead>
    <tbody>

        @{
           

            if (Model.Count() > 0)
            {
              
                var i = 1;
                foreach (var item in Model)
                {
                                    <tr id="Solicitudes_cant">
                                        <td style="text-align: justify">@item.IDNUMREG</td>
                                        <td style="text-align: justify">@item.PERIODO-@item.MES</td>
                                        <td style="text-align: center">@item.ODSIS-@item.DESCODSIS</td>
                                        <td style="text-align: center">@item.UEJECUTORA-@item.DESCEJECUTORA</td>
                                        <td style="text-align: center">@item.IDEESS-@item.EESS</td>
                                        <td style="text-align: center">@item.FECCREA</td>
                                        <td style="text-align: center">@item.ESTADO</td>
                                        <td style="text-align: center">@item.DIASPLAZO</td>
                                        <td style="text-align: center">@item.FECFINPLAZO</td>
                                        <td style="text-align: center">@item.USUCREA</td>
                                        <td style="text-align: center">


                                @{
                            if (item.TIPO == "2")
                                {
                                            <a onclick="GetSolicitudPorId(2,@item.IDNUMREG);" href="javascript:void(0);"><i style="font-size: 20px; color: #c64821;" title="Ver Solicitud" class="fas fa-eye" aria-hidden="true"></i></a>
                                            <a onclick="Conf_EliminarSolicitud(event,@item.IDNUMREG);" href="javascript:void(0);"><i style="font-size: 20px; color: #c64821;" title="Eliminar Solicitud" class="fas fa-trash" aria-hidden="true"></i></a>
                                }
                            if (item.TIPO == "1")
                                {
                                            <a onclick="GetSolicitudPorId(3,@item.IDNUMREG);" href="javascript:void(0);"><i style="font-size: 20px; color: #c64821;" title="Evaluar Solicitud" class="fas fa-pencil" aria-hidden="true"></i></a>
                                }
                                }          
                                        </td>
                                    </tr>
                    i = i + 1;
                }
            }
            else
            {
                                <tr>
                                    <td colspan="11" style="text-align: center"><h5 class="text-danger">Aún no hay registros a mostrar</h5></td>
                                </tr>
            }

        }
    </tbody>
</table>

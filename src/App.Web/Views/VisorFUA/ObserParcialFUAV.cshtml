@model IEnumerable<App.ViewModels.SELSiasis.SELSiasis.getAtencionObsPar>

<table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tblObserParcial" style="font-size: 10px !important">
    <thead class="text-center" style="background-color: #0272A3; border-width: 2px; color: white; vertical-align: middle; ">
        <tr>
            <th style="text-align:center"><span>N</span></th>
            <th style="text-align:center">CODIGO OBS</th>
            <th style="text-align:center">DESCRIPCIÓN</th>
            <th style="text-align:center">DETALLE</th>
            <th style="text-align:center">TIPO OBSERVACION</th>
            <th style="text-align:center">ORIGEN</th>

        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count() > 0)
            {
                var contador = 0;
                foreach (var item in Model)
                {
                <tr id="ParcialOBS_cant">
                    <td class="text-center">@(contador + 1)</td>
                    <td class="text-center">@item.rval_codigo_observacion</td>
                    <td class="text-center">@item.rval_descripcion</td>
                    <td class="text-center">@item.obs_detalle</td>
                    <td class="text-center">@item.descripcion_util</td>
                    <td class="text-center">@item.ORIGEN</td>


                </tr>
                    contador++;
                }
            }
            else
            {
                <tr>
                    <td colspan="8"><span class="text-danger">No hay registros para mostrar</span></td>
                </tr>
            }
        }
    </tbody>
</table>
<script>

</script>
@model IEnumerable<App.ViewModels.SELReconsideraciones.getAtencionesMEDxID>

<table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tblMedicamentos" style="font-size: 10px !important">
    <thead class="text-center" style="background-color: #0272A3; border-width: 2px; color: white; vertical-align: middle; ">
        <tr>
            <th style="text-align:center">Nº</th>
            <th style="text-align:center">CODIGO</th>
            <th style="text-align:center">DESCRIPCIÓN</th>
            <th style="text-align:center">PO(S/.)</th>
            <th style="text-align:center">FF</th>
            <th style="text-align:center">CONCENTR</th>
            <th style="text-align:center">PRES</th>
            <th style="text-align:center">ENTR</th>
            <th style="text-align:center">DX</th>
            <th style="text-align:center">OBSERVACIÓN</th>
            <th style="text-align:center">PREPOS(S/.)</th>
            @if (ViewBag.RecEstado == 6 && ViewBag.Permite == 1)
            {
                <th style="text-align:center"><span>ACCIÓN</span></th>
            }

        </tr>
    </thead>
    <tbody>

        @{

            if (Model.Count() > 0)
            {
                var i = 1;
                foreach (var item in Model)
                {
                <tr id="Medicamentos_cant">
                    <td style="text-align: center"> @i</td>
                    <td style="text-align: justify">@item.AMED_CODMED</td>
                    <td style="text-align: justify">@item.MED_NOMBRE</td>
                    <td style="text-align: center"><b>@( string.Format("{0:C2}", item.MED_COSTO))</b></td>
                    <td style="text-align: center">@item.MED_PRESEN</td>
                    <td style="text-align: center">@item.MED_CONCEN</td>
                    <td style="text-align: center">@item.AMED_ICANTPRESCRITA</td>
                    <td style="text-align: center">@item.AMED_ICANTENTREGADA</td>
                    <td style="text-align: justify">@item.C10_NOMBRE</td>
                    <td style="text-align: justify">@item.ROBS_DETALLE</td>
                    <td style="text-align: justify"></td>
                    @if (ViewBag.RecEstado == 6 && ViewBag.Permite == 1)
                    {
                        <td style="text-align: center">
                            <a onclick="Conf_Eliminar(event,2,@item.AMED_IDNUMREG);" href="javascript:void(0);"><i style="font-size: 20px; color: #c64821;" title="Eliminar Medicamento" class="fas fa-trash" aria-hidden="true"></i></a>
                        </td>
                    }

                </tr>
                    i = i + 1;
                }
            }
            else
            {
                <tr>
                    <td colspan="11" style="text-align: center"><h5 class="text-danger">Aún no hay registros a mostrar</h5></td>
                </tr>
            }

        }
    </tbody>
</table>
<script></script>
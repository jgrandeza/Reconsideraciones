@model IEnumerable<App.ViewModels.SELReconsideraciones.GetListObservaAte>
<table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tbl_ObsSus" style="font-size: 10px !important">
    <thead class="text-center" style="background-color: #000000; border-width: 2px; color: white; vertical-align: middle; ">
        <tr>
            <th style="text-align:center">Nº</th>
            <th style="text-align:center">CODIGO</th>
            <th style="text-align:center">OBSERVACIÓN</th>
            <th style="text-align:center">TIPO</th>
        </tr>
    </thead>
    <tbody>

        @{

            if (Model.Count() > 0)
            {
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center"> @i</td>
                        <td style="text-align: center">@item.ROBS_CODIGO_OBSERVACION</td>
                        <td style="text-align: center">@item.ROBS_DETALLE</td>
                        <td style="text-align: center">@item.TABLA</td>
                    </tr>
                    i = i + 1;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align: center"><h5 class="text-danger">Aún no hay registros a mostrar</h5></td>
                </tr>
            }

        }
    </tbody>
</table>

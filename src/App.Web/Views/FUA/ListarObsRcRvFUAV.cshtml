@model IEnumerable<App.ViewModels.SELReconsideraciones.GetObservRcRv>

<div class="modal fade" id="mdl_ObsRcRvFUAV" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="mdl_ObsRcRvFUAVlabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background:#264A74">
                <h5 class="modal-title text-white" id="mdl_ObsRcRvFUAVlabel">@ViewBag.Titulo_Modal</h5>

                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                     aria-label="Close">
                    <span class="svg-icon svg-icon-2x">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black"></rect>
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black"></rect>
                        </svg>
                    </span>
                </div>
            </div>

            <div class="modal-body">

                <table class="table align-middle border rounded table-row-dashed fs-6 g-5 display responsive" id="tbl_ObsRcRv" style="font-size: 10px !important">
                    <thead class="text-center" style="background-color: #000000; border-width: 2px; color: white; vertical-align: middle; ">
                        <tr>
                            <th style="text-align:center">Nº</th>
                            <th style="text-align:center">CODIGO</th>
                            <th style="text-align:center">OBSERVACIÓN</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{

                            if (Model.Count() > 0)
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align: center"> @i</td>
                                        <td style="text-align: center">@item.ORC_IDRC</td>
                                        <td style="text-align: center">@item.ORC_OBSERVACION</td>
                                    </tr>
                                    i = i + 1;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" style="text-align: center"><h5 class="text-danger">Aún no hay registros a mostrar</h5></td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>


                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        <i class="fas fa-times fs-4 me-2"></i>
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>$('#tbl_ObsRcRv').DataTable({
        destroy: true,
        "ordering": false,
        responsive: true,
        "pageLength": 5,
        "lengthChange": false,
        "searching": true,
        "language": languaje_spanol
    });</script>